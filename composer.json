{
    "name": "khr/php-mcurl-client",
    "description": "wrap curl client (http client) for PHP 5.3; using php multi curl, parallel request and write asynchronous code",
    "keywords": ["php", "curl","multi", "client", "http", "async", "parallel", "requests", "spider"],
    "homepage": "http://github.com/khristenkoyura/mcurl",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Khristenko Yura",
            "email": "khristenkoyura@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "ext-curl": "*",
        "zendframework/zend-diactoros": "~1.1"
    },
    "autoload": {
        "psr-4": {"KHR\\Curl": "src/"}
    },
    "config":{
        "preferred-install": "dist"
    },
    "archive":{
        "exclude":["*", ".*", "!/src/*"]
    }
}